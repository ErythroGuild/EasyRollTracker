<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

	<Frame name="eRollTracker_Template_Separator" virtual="true">
		<Size x="0" y="20"/>
		<Layers>
			<Layer level="OVERLAY">
				<Line parentKey="line" thickness="2">
					<Color r="0.85" g="0.85" b="0.85" a="0.80"/>
					<StartAnchor x="-60" relativePoint="CENTER"/>
					<EndAnchor x="60" relativePoint="CENTER"/>
				</Line>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="eRollTracker_Template_Heading" virtual="true">
		<Size x="180" y="72"/>

		<Scripts>
			<OnEnter>
				local _, itemLink = GetItemInfo(self.item);
				if itemLink ~= nil then
					GameTooltip:ClearLines();
					GameTooltip:SetOwner(_G["eRollTrackerFrame_Scroll"], "ANCHOR_CURSOR");
					GameTooltip:SetHyperlink(itemLink);
					GameTooltip:Show();
				end
			</OnEnter>
			<OnLeave function="eRollTracker_HideTooltip"/>
			<OnMouseDown>
				if self.item ~= "" then
					PickupItem(self.item)
				end
			</OnMouseDown>
		</Scripts>

		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="icon">
					<Size x="33" y="33"/>
					<Anchors><Anchor point="CENTER" y="8"/></Anchors>
					<Color r="0.25" g="0.65" b="0.45" a="1.00"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="border"
					file="Interface\AddOns\EasyRollTracker\rc\frame-item.tga">
					<Size x="36" y="36"/>
					<Anchors><Anchor point="CENTER" y="8"/></Anchors>
					<Color r="0.85" g="0.85" b="0.85" a="1.00"/>
				</Texture>
				<FontString name="$parent_Label"
					parentKey="label"
					inherits="ChatFontNormal"
					text="Thunderfury">
					<Size x="180" y="20"/>
					<Anchors><Anchor point="BOTTOM" y="2"/></Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="eRollTracker_Template_Entry" virtual="true" enableMouse="true">
		<Size x="0" y="24"/>
		<Layers>
			<Layer level="HIGHLIGHT">
				<Texture setAllPoints="true">
					<Color r="0.85" g="0.85" b="0.85" a="0.20"/>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parent_Role"
					parentKey="role"
					inherits="ChatFontNormal"
					text="#">
					<Size><AbsDimension x="24" y="24"/></Size>
				</FontString>
				<FontString name="$parent_Spec"
					parentKey="spec"
					inherits="ChatFontNormal"
					justifyH="LEFT"
					text="RST">
					<Size><AbsDimension x="36" y="24"/></Size>
				</FontString>
				<FontString name="$parent_Max"
					parentKey="max"
					inherits="ChatFontNormal"
					justifyH="RIGHT"
					text="100">
					<Size><AbsDimension x="50" y="24"/></Size>
					<Anchors><Anchor point="RIGHT" x="-14"/></Anchors>
				</FontString>
				<FontString name="$parent_Roll"
					parentKey="roll"
					inherits="ChatFontNormal"
					justifyH="RIGHT"
					text="42">
					<Size><AbsDimension x="40" y="24"/></Size>
				</FontString>
				<FontString name="$parent_Name"
					parentKey="name"
					inherits="ChatFontNormal"
					justifyH="LEFT"
					text="Edeilinna">
					<Size><AbsDimension x="0" y="24"/></Size>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
</Ui>
